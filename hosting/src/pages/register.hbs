{{#> "layouts/layout.hbs"}}

<div class="container">
  <h1>Sign Up</h1>
  <p class="lead">Passwords must be at least 8 characters long.</p>
  <br />
  <form id="registerForm" role='form' style='max-width: 300px;'>
    <div class="form-group">
        <input class="form-control" type='text'  name="username" placeholder='Username' autocomplete="username" required/>
    </div>
    <div class="form-group">
        <input class="form-control" type='email'  name="email" placeholder='Email' autocomplete="username" required/>
    </div>
    <div class="form-group">
      <input class="form-control" type='password' name="password" placeholder='Password' autocomplete="current-password" required/>
    </div>
    <button class="btn btn-default" type='submit'>Submit</button>
    &nbsp;
    <a href='/'>
      <button class="btn btn-primary" type="button">Cancel</button>
    </a>
  </form>
</div>

<script type="module" src="/src/pages/register.ts"></script>


{{/ "layouts/layout.hbs"}}
